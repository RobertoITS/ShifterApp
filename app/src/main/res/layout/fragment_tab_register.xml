<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".registerfragment.TabRegisterFragment">

    <EditText
        android:background="@drawable/shape_edit_text01"
        android:fontFamily="@font/roboto_thin"
        android:id="@+id/register_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:elevation="8dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias=".10"
        app:layout_constraintHorizontal_bias=".5"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="5dp"
        android:hint="Nombre"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,RtlHardcoded,RtlSymmetry,TextFields" />

    <EditText
        android:background="@drawable/shape_edit_text01"
        android:fontFamily="@font/roboto_thin"
        android:id="@+id/register_email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:drawableStart="@drawable/ic_input_email"
        android:elevation="8dp"
        android:drawablePadding="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_name"
        app:layout_constraintWidth_percent="0.8"
        tools:ignore="Autofill,RtlHardcoded,RtlSymmetry,TextFields"  />

    <EditText
        android:background="@drawable/shape_edit_text01"
        android:fontFamily="@font/roboto_thin"
        android:id="@+id/register_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias=".5"
        android:hint="Contraseña"
        android:elevation="8dp"
        android:drawableStart="@drawable/ic_lock_input"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_email"
        tools:ignore="Autofill,RtlHardcoded,RtlSymmetry,TextFields"  />

    <EditText
        android:background="@drawable/shape_edit_text01"
        android:fontFamily="@font/roboto_thin"
        android:id="@+id/register_confirm_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:hint="Repita contraseña"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_lock_input"
        android:drawablePadding="5dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_password"
        app:layout_constraintWidth_percent="0.8"
        tools:ignore="Autofill,RtlHardcoded,RtlSymmetry,TextFields" />

    <Button
        android:id="@+id/btnRegister2"
        app:backgroundTint="@color/Secondary"
        android:background="@drawable/shape_button01"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintWidth_percent=".8"
        android:text="REGISTRATE"
        style="bold"
        android:fontFamily="@font/roboto_thin"
        android:textSize="16sp"
        app:layout_constraintVertical_bias=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_confirm_password"
        android:elevation="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>